                  "type": "string"
                },
                "ISTIO_META_ROUTER_MODE": {
                  "type": "string"
                }
              },
              "required": [

              ]
            }
          },
          "required": [
          ]
        }
      },
      "required": [
      ]
    },
    "trafficManagement": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      },
      "required": ["enabled"]
    },
    "pilot": {
      "type": "object",
      "properties": {
        "configValidation": {
          "type": "boolean"
        },
        "CPU_REQUEST": {
          "type": "string"
        },
        "CPU_LIMIT": {
          "type": "string"
        },
        "MEMORY_REQUEST": {
          "type": "string"
        },
        "MEMORY_LIMIT": {
          "type": "string"
        }
