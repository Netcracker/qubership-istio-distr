        },
        "MEMORY_REQUEST": {
          "type": "string"
        },
        "MEMORY_LIMIT": {
          "type": "string"
        }
      },
      "required": [
        "CPU_REQUEST",
        "CPU_LIMIT",
        "MEMORY_REQUEST",
        "MEMORY_LIMIT"
      ]
    },
    "cni": {
      "type": "object",
      "properties": {
        "CPU_REQUEST": {
          "type": "string"
        },
        "CPU_LIMIT": {
          "type": "string"
        },
        "MEMORY_REQUEST": {
          "type": "string"
        },
        "MEMORY_LIMIT": {
          "type": "string"
        }
