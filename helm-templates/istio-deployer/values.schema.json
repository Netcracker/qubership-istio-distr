          "type": "boolean"
        },
        "CPU_REQUEST": {
          "type": "string"
        },
        "CPU_LIMIT": {
          "type": "string"
        },
        "MEMORY_REQUEST": {
          "type": "string"
        },
        "MEMORY_LIMIT": {
          "type": "string"
        }
      },
      "required": [
        "ENABLED",
        "CPU_REQUEST",
        "CPU_LIMIT",
        "MEMORY_REQUEST",
        "MEMORY_LIMIT"
      ]
    }
  },
  "required": [
    "SERVICE_NAME",
    "NAMESPACE",
    "PAAS_PLATFORM",
    "IMAGE_REPOSITORY",
    "TAG",
    "LOG_LEVEL",
    "CPU_REQUEST",
    "CPU_LIMIT",
    "MEMORY_LIMIT",
    "READONLY_CONTAINER_FILE_SYSTEM_ENABLED",
    "SA_NAME",
    "meshConfig",
