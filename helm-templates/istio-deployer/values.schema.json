      "type": "string"
    },
    "TAG": {
      "type": "string"
    },
    "LOG_LEVEL": {
      "type": "string"
    },
    "CPU_REQUEST": {
      "type": "string"
    },
    "CPU_LIMIT": {
      "type": "string"
    },
    "MEMORY_LIMIT": {
      "type": "string"
    },
    "READONLY_CONTAINER_FILE_SYSTEM_ENABLED": {
      "type": "boolean"
    },
    "SA_NAME": {
      "type": "string"
    },
    "meshConfig": {
      "type": "object",
      "properties": {
        "defaultConfig": {
          "type": "object",
